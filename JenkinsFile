pipeline {
    agent any

    stages {
        stage('repo_locaion') {
            steps {
                script{
                    sh 'ls -lart'
                    pwd
                }
            }
        }
        stage('Build') {
            steps {
                script{
                    sh 'mvn clean package'
                }
            }
        }
        stage('Tests') {
            parallel{
                stage('nested loop1') {
                    stages{
                        stage('Test A'){
                            steps{
                                script{
                                    echo("Test A")
                                }
                            }
                        }
                        stage('Test B'){
                            steps{
                                script{
                                    echo('Test B')
                                }
                            }
                        }
                    }
                }
                stage('nested loop2'){
                    stages{
                        stage('Test'){
                        steps{
                            script{
                                sh 'mvn test'
                            }
                        }
                    }
                        stage('Test M'){
                        steps{
                            script{
                                echo('Test M')
                            }
                        }
                    }
                    }
                }
                stage('Test D'){
                    steps{
                        script{
                            echo('Test D')
                        }
                    }
                }
            }
        }
        stage('Deploy'){
            steps{
                script{
                    echo('Deploy')                
                }
            }
        }
    }

}
